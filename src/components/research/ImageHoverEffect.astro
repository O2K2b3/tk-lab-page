---
import { Image } from 'astro:assets';

export interface Props {
  backgroundImage: string;
  hoverImage: string;
  backgroundAlt: string;
  hoverAlt: string;
  width?: number;
  height?: number;
  class?: string;
}

const {
  backgroundImage,
  hoverImage,
  backgroundAlt,
  hoverAlt,
  width = 400,
  height = 400,
  class: className = ''
} = Astro.props;
---

<div class={`absolute inset-0 ${className}`}>
  <!-- 背景画像 -->
  <Image
    src={backgroundImage}
    alt={backgroundAlt}
    width={width}
    height={height}
    class="h-full w-full object-cover duration-500 lg:group-hover:scale-110"
  />
  <!-- ホバー時に表示される画像 -->
  <Image
    src={hoverImage}
    alt={hoverAlt}
    width={width}
    height={height}
    class="absolute inset-0 h-full w-full object-cover duration-500 lg:group-hover:scale-110 lg:group-hover:opacity-0"
  />
</div>
